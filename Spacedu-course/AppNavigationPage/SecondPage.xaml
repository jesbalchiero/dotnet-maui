<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppNavigationPage.SecondPage"
             Title="SecondPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the Second Page!"
            FontSize="48"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Follow to the Third Page"
            HorizontalOptions="Center" 
            Clicked="OnButtonNextPageClicked" />

        <Button 
            Text="Return"
            HorizontalOptions="Center" 
            Clicked="OnButtonPreviousPageClicked" />
    </VerticalStackLayout>
</ContentPage>